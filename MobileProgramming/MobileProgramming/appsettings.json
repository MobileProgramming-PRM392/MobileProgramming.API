{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "local": "Server=host.docker.internal;Database=MobileProgramming;Uid=sa;pwd=12345;TrustServerCertificate=true"
    //"local": "Server=(local);Database=MobileProgramming;Uid=sa;pwd=12345;TrustServerCertificate=true"
    //"production": "Server=daskillz.database.windows.net,1433;Initial Catalog=daskillz_production;Persist Security Info=False;User ID=daskillz;Password=WASDpl,123;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30"
  },
  "Redis": {
    "InstanceName": "CacheProduct",
    "HostName": "redis:6379",
    //"Password": "12345",
    "TimeToLive": 10
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:dd/MM/yyyy hh:mm:ss tt} {Level:u3}] {Message:lj} {NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"

}
